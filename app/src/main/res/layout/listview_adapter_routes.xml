<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="310dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView android:id="@+id/tvRoute"
                android:text="Route: SSS Village - Cubao"
                android:textSize="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="190dp">
                <android.support.v7.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView android:text="Number Of Queue"
                            android:gravity="center"
                            android:textSize="22dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView android:id="@+id/tvNumberQueue"
                            android:text="0"
                            android:textSize="80sp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView android:text="Current Queue"
                            android:gravity="center"
                            android:textSize="22dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView android:id="@+id/tvCurrentQueue"
                            android:text="0"
                            android:textSize="80sp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button android:id="@+id/btnQueue"
                    android:text="Queue"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"/>
                <Button android:id="@+id/btnViewQueue"
                    android:text="View Schedule"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>